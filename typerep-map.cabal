name:                typerep-map
version:             0.1.0.0
description:         Efficient implementation of data type with types as keys
homepage:            https://github.com/vrom911/typerep-map
bug-reports:         https://github.com/vrom911/typerep-map/issues
license:             MIT
license-file:        LICENSE
author:              Veronika Romashkina
maintainer:          vrom911@gmail.com
copyright:           2017 Veronika Romashkina
category:            Data Structures
build-type:          Simple
extra-source-files:  README.md
cabal-version:       2.0
tested-with:         GHC == 8.0.2
                   , GHC == 8.2.2
                   , GHC == 8.4.3

library
  hs-source-dirs:      src
  exposed-modules:     Data.TypeRep.Map
  ghc-options:         -Wall
  build-depends:       base
                     , vector
  default-extensions:  OverloadedStrings
                       RecordWildCards
                       ScopedTypeVariables
                       TypeApplications
  default-language:    Haskell2010

library typerep-map-internal
  hs-source-dirs:      src
  exposed-modules:     Data.TypeRep.CMap
                       Data.TypeRep.CacheMap
                       Data.TypeRep.Vector
  ghc-options:         -Wall
  build-depends:       base
                     , containers
                     , ghc-prim
                     , vector
  default-extensions:  OverloadedStrings
                       RecordWildCards
                       ScopedTypeVariables
                       TypeApplications

  default-language:    Haskell2010

test-suite typerep-map-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Test.hs
  other-modules:       Test.TypeRep.Map
                     , Test.TypeRep.Vector
                     , Test.TypeRep.VectorOpt
  build-depends:       base
                     , typerep-map
                     , typerep-map-internal
                     , tasty
                     , tasty-discover >= 4.1.1
                     , tasty-hspec
  build-tool-depends:  tasty-discover:tasty-discover
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010

benchmark typerep-map-benchmark
  type:                exitcode-stdio-1.0
  default-language:    Haskell2010
  ghc-options:         -Wall -O2 -threaded -rtsopts -with-rtsopts=-N -freduction-depth=0
  hs-source-dirs:      benchmark
  main-is:             Main.hs
  other-modules:       Map
                     , CacheMap
                     , Vector
                     , OptimalVector
  build-depends:       base
                     , criterion
                     , typerep-map
                     , typerep-map-internal
                     , deepseq
                     , ghc-typelits-knownnat
  default-extensions:  OverloadedStrings
                       RecordWildCards
                       ScopedTypeVariables
                       TypeApplications


source-repository head
  type:                git
  location:            https://github.com/vrom911/typerep-map.git
